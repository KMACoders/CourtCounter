<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Basketball Scores"
        android:textColor="@color/btnColor"
        android:textStyle="bold"
        android:textSize="35dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team A"
                android:textSize="25dp"
                android:layout_marginBottom="15dp"/>
            <TextView
                android:id="@+id/txtScoreA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="90dp"
                android:textColor="#000"
                android:layout_marginBottom="15dp"/>
            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="+3 POINTS"
                android:layout_marginBottom="15dp"
                android:background="@color/btnColor"
                android:onClick="btnA3Points"/>
            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="+2 POINTS"
                android:layout_marginBottom="15dp"
                android:background="@color/btnColor"
                android:onClick="btnA2Points"/>
            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="FREE THROW"
                android:layout_marginBottom="15dp"
                android:background="@color/btnColor"
                android:onClick="btnA1Point"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="320dp"
            android:background="@color/greyLine"
            android:layout_marginTop="40dp"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team B"
                android:textSize="25dp"
                android:layout_marginBottom="15dp"/>
            <TextView
                android:id="@+id/txtScoreB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="90dp"
                android:textColor="#000"
                android:layout_marginBottom="15dp"/>
            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="+3 POINTS"
                android:layout_marginBottom="15dp"
                android:background="@color/btnColor"
                android:onClick="btnB3Points"/>
            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="+2 POINTS"
                android:layout_marginBottom="15dp"
                android:background="@color/btnColor"
                android:onClick="btnB2Points"/>
            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="FREE THROW"
                android:layout_marginBottom="15dp"
                android:background="@color/btnColor"
                android:onClick="btnB1Point"/>

        </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESET"
        android:background="@color/btnColor"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:onClick="btnReset"/>
</LinearLayout>